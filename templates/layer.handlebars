<li class="layer {{#if raster}}raster-layer{{else}}vector-layer{{/if}}" index="{{ index }}">
    <input class="layer-checkbox" type="checkbox" class="layer-checkbox">
    <span class="layer-name">{{name}}</span>
    {{#if raster}}<span class="layer-type-marker raster">ⓡ</span>
    {{else}}<span class="layer-type-marker vector" style="color: {{color}};">ⓥ</span>
    {{/if}}
</li>
